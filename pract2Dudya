    // Executable button 1
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {
        char c = ' ';
        String s = jTextArea1.getText();
        int sl = s.length();
        int k = 0;
        for (int i = 0; i < sl; i++){
            c = s.charAt(i);
            if (c == ' ' | i == sl){
                k++;
            }
        }
        if (c != ' ')k++;
        String s2 = "" + k;
        JOptionPane.showMessageDialog(rootPane, "В введеном вами предложении "+ s2 +" слова", "Result", INFORMATION_MESSAGE);
    }
    // Executable button 2
    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {

        String vowels = "QWERTYUIOPASDFGHJKLZXCVBNM";

        String wholeText = jTextArea2.getText();
        int length = wholeText.length();
        int copyLen = length;
        int startPos = 0;

        while(copyLen != 0) {

            String currentWord = "";

            for(int i = startPos; i < length; ++i){
                if(wholeText.charAt(i) == ' '){
                    startPos++;
                    copyLen--;
                    break;
                }
                else if(wholeText.charAt(i) == ','){
                    startPos++;
                    copyLen--;
                    break;
                }
                else if(wholeText.charAt(i) == '!'){
                    startPos++;
                    copyLen--;
                    break;
                }
                else if(wholeText.charAt(i) == '.'){
                    startPos++;
                    copyLen--;
                    break;
                }
                else if(wholeText.charAt(i) == '?'){
                    startPos++;
                    copyLen--;
                    break;
                }
                else if(wholeText.charAt(i) == '\n'){
                    startPos++;
                    copyLen--;
                    break;
                }
                else if(wholeText.charAt(i) != '\0'){
                    currentWord += wholeText.charAt(i);
                    startPos++;
                    copyLen--;
                }
            }

            int wordLen = currentWord.length();

            if(!"".equals(currentWord))
            {
                for(int i = 0; i < vowels.length(); ++i)
                {
                    if(currentWord.charAt(0) == vowels.charAt(i))
                    {
                        jTextArea3.append(currentWord + '\n');
                        break;
                    }
                }
            }
        }

    }

